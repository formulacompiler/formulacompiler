	rewrite sumsq( xs* ) =
		apply fold with s = 0 each xi as s = s + xi * xi end
		to list xs

	rewrite rank( number, xs#, order ) =
		if order = 0
		then
			apply
				fold with r = 1
				each xi as r = r + (number < xi)
				end
			to vectors {xs}
		else
			apply
				fold with r = 1
				each xi as r = r + (number > xi)
				end
			to vectors {xs}
	rewrite rank( number+, ref+ ) = RANK( number, ref, 0 )

	rewrite kurt( xs* ) =
		let n = COUNT(xs)
		let a = n - 1
		let b = (n - 2) * (n - 3)
		let s = STDEV(xs)
		let m = SUM(xs) / n
		in
			(	apply
					fold with r = 0 each xi as
						r = r +
							(	let ei = (xi - m)/s
								let ei2 = ei * ei
								in ei2 * ei2
							)
					end
				to list xs
			) * n * (n + 1) / (a * b) - 3 * a * a / b

	rewrite skew( xs* ) =
		let n = COUNT(xs)
		let s = STDEV(xs)
		let s3 = s*s*s
		let m = SUM(xs) / n
		in
			(	apply
					fold with r = 0 each xi as
						r = r + (let ei = xi - m in ei*ei*ei)
					end
				to list xs
			) / s3 * n / ((n - 1) * (n - 2))

	rewrite avedev( xs* ) =
		let n = COUNT(xs)
		let m = SUM(xs) / n
		in
			(	apply
					fold with r = 0 each xi as r = r + ABS( m - xi ) end
				to list xs
			) / n

	rewrite devsq( xs* ) =
		let n = COUNT(xs)
		let m = SUM(xs) / n
		in
			apply fold with r = 0 each xi as r = r + (let ei = xi - m in ei*ei) end
			to list xs

