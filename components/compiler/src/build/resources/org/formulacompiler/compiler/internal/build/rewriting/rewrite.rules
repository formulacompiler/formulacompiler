	rewrite sumxmy2( xs#, ys# ) =
		if COUNT(xs) <> COUNT(ys) then NA()
		else
			apply
				fold with
					sxy = 0
				each xi, yi as
					sxy = sxy + (let xmy = xi - yi in xmy * xmy)
				into
