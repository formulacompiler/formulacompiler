	// citation: covar
	rewrite covar( xs#, ys# ) =
		apply
			fold with
				sx = 0,
				sy = 0,
				sxy = 0
			each xi, yi as
				sx = sx + xi,
				sy = sy + yi,
				sxy = sxy + xi * yi
			with count n into
				(sxy - sx*sy/n) / n
			when empty 0
			end
		to vectors {xs, ys}
